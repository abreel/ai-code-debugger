{
  "name": "ai-code-debugger",
  "displayName": "Ai Code Debugger (ACD)",
  "description": "A VS Code extension and npm package that automatically detects, sends, and fixes TypeScript/JavaScript errors using Google Gemini AI, with results logged in a structured JSON format.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fixTsErrors.run",
        "title": "ACD: Fix TypeScript Errors with Gemini",
        "icon": {
          "light": "resources/icons/run.svg",
          "dark": "resources/icons/run.svg"
        }
      },
      {
        "command": "fixTsErrors.stop",
        "title": "ACD: Stop Debugging",
        "icon": {
          "light": "resources/icons/stop.svg",
          "dark": "resources/icons/stop.svg"
        }
      },
      {
        "command": "fixTsErrors.clearLogs",
        "title": "ACD: Clear Logs",
        "icon": {
          "light": "resources/icons/clear.svg",
          "dark": "resources/icons/clear.svg"
        }
      },
      {
        "command": "fixTsErrors.exportLogs",
        "title": "ACD: Export Logs",
        "icon": {
          "light": "resources/icons/export.svg",
          "dark": "resources/icons/export.svg"
        }
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "fixTsErrors.run",
          "when": "view == geminiLogs",
          "group": "navigation"
        },
        {
          "command": "fixTsErrors.stop",
          "when": "view == geminiLogs",
          "group": "navigation"
        },
        {
          "command": "fixTsErrors.clearLogs",
          "when": "view == geminiLogs",
          "group": "navigation"
        },
        {
          "command": "fixTsErrors.exportLogs",
          "when": "view == geminiLogs",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "dev": "npm run compile && npm run watch"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.8",
    "eslint": "^9.32.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@google/genai": "^1.14.0",
    "@google/generative-ai": "^0.24.1",
    "dotenv": "^17.2.1"
  }
}